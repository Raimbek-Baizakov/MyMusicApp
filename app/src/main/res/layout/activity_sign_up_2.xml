<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up 2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите 4-значный код"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <EditText
                android:id="@+id/code1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@drawable/edittext_border"
                android:importantForAccessibility="yes"
                android:contentDescription="Code 1"/>

            <EditText
                android:id="@+id/code2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_border"
                android:importantForAccessibility="yes"
                android:contentDescription="Code 2"/>

            <EditText
                android:id="@+id/code3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_border"
                android:importantForAccessibility="yes"
                android:contentDescription="Code 3"/>

            <EditText
                android:id="@+id/code4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_border"
                android:importantForAccessibility="yes"
                android:contentDescription="Code 4"/>
        </LinearLayout>

        <Button
            android:id="@+id/verifyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подтвердить"
            android:layout_marginBottom="16dp"
            android:importantForAccessibility="yes"
            android:contentDescription="Verify Button"/>

        <TextView
            android:id="@+id/errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:importantForAccessibility="yes"
            android:contentDescription="Error Text"/>

    </LinearLayout>
</FrameLayout>
